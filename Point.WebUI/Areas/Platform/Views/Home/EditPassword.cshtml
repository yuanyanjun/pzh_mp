
@{
    ViewBag.Title = "修改密码";
    Layout = "~/Areas/Platform/Views/Shared/LayoutBase.cshtml";
}

@section Style{
    <style type="text/css">
        .textbox {
            width: 100%;
            height: 34px;
            border: 1px solid #d2d5e0;
            border-radius: 2px;
            box-sizing: border-box;
            padding: 6px 30px 6px 10px;
            color: #404040;
            font-size: 14px;
        }

        .boxBtn {
            width: 100%;
            text-align: center;
            margin-bottom: 20px;
            padding-top: 30px;
        }

        .addbtn {
            width: 132px;
            height: 32px;
            border: none;
            border-radius: 4px;
            color: white;
            font-size: 14px;
            letter-spacing: 5px;
            margin: 0 20px;
            cursor: pointer;
        }

        .btnGreen {
            background: #60c74c;
        }

        .red {
            color: red;
            font-weight: bold;
        }

        .boxContent {
            margin: 0;
        }

        .content {
            width: 98%;
        }

        .hide {
            display: none;
        }

        table {
            border-collapse: collapse;
            border-spacing: 0;
            display: table;
        }

        .table td {
            padding: 0 10px 10px 0;
        }

        .table {
            width: 100%;
            margin-top:20px;
        }

            .table .td1 {
                width: 100px;
                text-align: right;
            }

            .table .td2 {
            }

        .cell_item {
            width: 100%;
            height: 20px;
            line-height: 20px;
            margin-top: 20px;
            text-align:center;
        }

        .errortip {
            color: #ff6a00;
        }
    </style>
}
@section Body{
    <div class="box" id="app">

        <table class="table">
            <tr>
                <td class="td1"><b class="red">*</b>原密码</td>
                <td class="td2">
                    <input type="password" class="textbox" name="oldPassword" id="oldPassword" v-model:value="oldPassword" maxlength="20" />
                </td>
            </tr>
            <tr>
                <td class="td1"><b class="red">*</b>密码</td>
                <td class="td2">
                    <input type="password" class="textbox" name="password" id="password" v-model:value="password" maxlength="20" />
                </td>
            </tr>
            <tr>
                <td class="td1"><b class="red">*</b>确认密码</td>
                <td class="td2">
                    <input type="password" class="textbox" name="confirmPassword" id="confirmPassword" v-model:value="confirmPassword" maxlength="20" />
                </td>
            </tr>

        </table>
        <div class="cell_item">
            <span class="errortip" v-text="errorMsg"></span>
        </div>
        <div class="boxBtn">
            <input type="button" class="addbtn btnGreen" v-model="btnText" v-on:click="editPassword" />
        </div>



    </div>
}
@section Script{

    <script type="text/javascript">
        var vm = new Vue({
            el: '#app',
            data: {
                oldPassword: null,
                password: null,
                confirmPassword: null,
                isPosting: false,
                errorMsg: ''
            },
            computed: {
                btnText: function () {
                    return this.isPosting ? '确定...' : '确定';
                }
            },
            methods: {
                editPassword: function () {
                    if (this.isPosting)
                        return;

                    if (!this.oldPassword) {
                        this.errorMsg = '原密码不能为空';
                        return;
                    }
                    if (!this.password) {
                        this.errorMsg = '新密码不能为空';
                        return;
                    }

                    if (this.password.length < 6) {
                        this.errorMsg = '密码长度至少6位';
                        return;
                    }

                    if (!this.confirmPassword) {
                        this.errorMsg = '确认密码不能为空';
                        return;
                    }

                    if (this.password != this.confirmPassword) {
                        this.errorMsg = '两次输入的密码不一致';
                        return;
                    }

                    this.errorMsg = '';
                    this.isPosting = true;

                    var parms = {
                        oldPassword: this.oldPassword,
                        password: this.password
                    }


                    this.$options.signPost(buildUrl('~/Platform/Home/EditPassword'), parms, (function (res) {

                        if (res.error) {
                            this.isPosting = false;
                            this.errorMsg = res.error.message;
                            return;
                        }
                        TipMsg.show('密码修改成功，请重新登录');
                        setTimeout(function () {
                            closeWindow(true, null);
                        },500);
                       
                    }).bind(this));
                }
            },
            created: function () {

            }
        });
    </script>
}
