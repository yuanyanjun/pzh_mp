
@model CategoryInfo
@{
    ViewBag.Title = "新增栏目";
    Layout = "~/Areas/Platform/Views/Shared/LayoutBase.cshtml";
}

@section Style{
    <style type="text/css">
    .textbox {
        width: 100%;
        height: 34px;
        border: 1px solid #d2d5e0;
        border-radius: 2px;
        box-sizing: border-box;
        padding: 6px 30px 6px 10px;
        color: #404040;
        font-size: 14px;
    }

    .boxBtn {
        width: 100%;
        text-align: center;
        margin-bottom: 20px;
        padding-top: 30px;
    }

    .addbtn {
        width: 132px;
        height: 32px;
        border: none;
        border-radius: 4px;
        color: white;
        font-size: 14px;
        letter-spacing: 5px;
        margin: 0 20px;
        cursor: pointer;
    }

    .btnGreen {
        background: #60c74c;
    }

    .red {
        color: red;
        font-weight: bold;
    }

    .boxContent {
        margin: 0;
    }

    .content {
        width: 98%;
    }

    .hide {
        display: none;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        display: table;
    }

    .table td {
        padding: 0 10px 10px 0;
    }

    .table {
        width: 100%;
        margin-top:20px;
    }

        .table .td1 {
            width: 100px;
            text-align: right;
        }

        .table .td2 {
        }
</style>
}
@section Body{
    <div id="app">
        <input type="hidden" name="Id" Id="Id" value="@Model.Id" />
        <table class="table">
            <tr>
                <td class="td1"><b class="red">*</b>栏目名称</td>
                <td class="td2">
                    <input type="text" class="textbox" name="Name" id="Name" value="@Model.Name" maxlength="20" />
                </td>
            </tr>
        </table>
        <div class="boxBtn">
            <input type="button" class="addbtn btnGreen" v-bind:value="isPosting?'保存...':'保存'" v-on:click="sendPostRequest" />
        </div>
    </div>


}
@section Script{
    <script type="text/javascript">
        $(function () {
            var ve = new Vue({
                el: '#app',
                data: {
                    isPosting: false
                },
                methods: {
                    sendPostRequest: function () {

                        if (ve.isPosting)
                            return;

                        if (!$('#Name').val()) {
                            TipMsg.show('栏目名称不能为空');
                            return;
                        }

                        ve.isPosting = true;

                        var filter = {
                            Id: $('#Id').val(),
                            Name: $('#Name').val()
                        };
                        $.post(buildUrl('~/platform/category/operation'), filter, function (res) {
                            ve.isPosting = false;
                            if (res.error) {
                                TipMsg.show(res.error.message, 300);
                                return;
                            }

                            TipMsg.show('保存成功');
                            closeWindow(true, res.value);
                        });
                    }
                }
            });
        });
    </script>
}
