
@{
    ViewBag.Title = "管理员登录";
    Layout = "~/Areas/Platform/Views/Shared/LayoutBase.cshtml";
}

@section Style{
    <link href="~/Resources/platform/css/login.css" rel="stylesheet" />
}
@section Body{
    <div class="box" id="app">

        <div class="item">
            <span>账号：</span>
            <input type="text" class="txt" placeholder="帐号" maxlength="50" v-model="account" />
        </div>
        <div class="item">
            <span class="name">密码：</span>
            <input type="password" class="txt" placeholder="密码" maxlength="20" v-model="password" />
        </div>

        <div class="item btn">
            <input type="button" class="btn" v-model="btnText" v-on:click="login" />
        </div>
        <div class="item">
            <span class="error" v-text="errorMsg"></span>
        </div>
    </div>
}
@section Script{

    <script type="text/javascript">
        var vm = new Vue({
            el: '#app',
            data: {
                account: null,
                password: null,
                isLogin: false,
                errorMsg:''
            },
            computed: {
                btnText: function () {
                    return this.isLogin ? '登录中...' : '登录';
                }
            },
            methods: {
                login: function () {
                    if (this.isLogin)
                        return;

                    if (!this.account) {
                        this.errorMsg = '登录账号不能为空';
                        return;
                    }
                    if (!this.password) {
                        this.errorMsg = '登录密码不能为空';
                        return;
                    }
                    this.errorMsg = '';
                    this.isLogin = true;

                    var parms = {
                        account: this.account,
                        password: this.password
                    }

                 
                    this.$options.signPost(buildUrl('~/Platform/Login/Login'), parms, (function (res) {
                        this.isLogin = false;
                        if (res.error) {
                            this.errorMsg = res.error.message;
                            return;
                        }

                        location.href = buildUrl('~/Platform/Home/Index');
                    }).bind(this));
                }
            },
            created: function () {

            }
        });
    </script>
}
