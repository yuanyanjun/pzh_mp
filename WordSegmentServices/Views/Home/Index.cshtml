
@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
}

@section Style{
    <style type="text/css">
        body, html {
            height: 100%;
        }

        body {
            padding: 0px;
            margin: 0;
            overflow: hidden;
        }

        a {
            text-decoration: none;
        }

        .l-layout-top {
            background: #102A49;
            color: White;
        }

        .l-layout-bottom {
            background: #E5EDEF;
            text-align: center;
        }

        .pageloading {
            position: absolute;
            left: 0px;
            top: 0px;
            background: white url('Resources/images/loading.gif') no-repeat center;
            width: 100%;
            height: 100%;
            z-index: 99999;
        }


        .space {
            color: #E7E7E7;
        }
        /* 顶部 */
        .l-topmenu {
            margin: 0;
            padding: 0;
            height: 31px;
            line-height: 31px;
            background: url('Resources/images/top.jpg') repeat-x bottom;
            position: relative;
            border-top: 1px solid #1D438B;
        }

        .l-topmenu-logo {
            color: #E7E7E7;
            padding-left: 35px;
            line-height: 26px;
            background: url('Resources/images/topicon.gif') no-repeat 10px 5px;
        }

        .l-topmenu-right {
            position: absolute;
            height: 24px;
            line-height: 24px;
            right: 30px;
            top: 2px;
            color: #070A0C;
        }

            .l-topmenu-right a {
                color: #E7E7E7;
                text-decoration: none;
            }

            .l-topmenu-right label {
                color: white;
            }

            .cur {
                background:#FFEEAC; 
            }
        .left_item {
            font-size: 14px;
            text-align: left;
            padding-left: 5px;
            padding:5px 0px 5px 5px;
            line-height:25px;
            vertical-align:middle;
        }

            .left_item a {
                color: #404040;
            }

             .left_item_over
             { 
                 background:#FFEEAC; 
                 border:1px solid #DB9F00;

             }
              
    </style>
}
@section Body{
    <div id="pageloading" class="pageloading"></div>
    <div id="topmenu" class="l-topmenu">
        <div class="l-topmenu-logo">攀枝花国土资源公众号管理平台</div>
        <div class="l-topmenu-right">
            <label>admin</label>
            <span class="space">|</span>
            <a href="javascript:void(0);">修改密码</a>
            <span class="space">|</span>
            <a href="javascript:void(0);">退出</a>
        </div>
    </div>
    <div id="layout1" style="width:99.2%; margin:0 auto; margin-top:4px; ">
        <div position="left" title="功能导航" id="accordion">
            <div title="功能列表">
                <div class="left_item cur"><a href="javascript:void(0);">系统栏目管理</a></div>
                <div class="left_item"><a href="javascript:void(0);">系统文章管理</a></div>
                <div class="left_item"><a href="javascript:void(0);">数据抓取管理</a></div>
                <div class="left_item"><a href="javascript:void(0);">公众号菜单管理</a></div>
                <div class="left_item"><a href="javascript:void(0);">用户管理</a></div>
            </div>
        </div>
        <div position="center" id="framecenter">
            <div tabid="home" title="栏目管理" style="height:300px">
                    <iframe frameborder="0" name="home" id="home" src="Home/CategoryManager"></iframe>
            </div>
        </div>

    </div>
    <div style="height:32px; line-height:32px; text-align:center;">
        Copyright © 2011-2013 www.pzhgt.gov.cn
    </div>
    <div style="display:none"></div>
}
@section Script{
    <script type="text/javascript">
        var tab;
        $(function () {
            //$("#home").attr("src", "#");
            //布局
            $("#layout1").ligerLayout({ leftWidth: 190, height: '100%', heightDiff: -34, space: 4, onHeightChanged: function () { } });

            var height = $(".l-layout-center").height();

            //Tab
            $("#framecenter").ligerTab({ height: height });

            //面板
            $("#accordion").ligerAccordion({ height: height, speed: null });

            $(".left_item").hover(function () {
                $(this).addClass("left_item_over");
            }, function () {
                $(this).removeClass("left_item_over");
            });

            $("#pageloading").hide();
        });
    </script>
}
